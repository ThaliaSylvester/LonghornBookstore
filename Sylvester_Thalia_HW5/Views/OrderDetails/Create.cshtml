@model Sylvester_Thalia_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Create";
}

<h2>Add to Order</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.order.OrderID)

            <div class="form-group">
                <label class="control-label">Products:</label>
                @Html.DropDownList("SelectedProduct", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Order" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" asp-route-orderID="@Model.order.OrderID">Back to List</a>
</div>

