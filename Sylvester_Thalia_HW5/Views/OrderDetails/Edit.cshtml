@model Sylvester_Thalia_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailID" />
            <input type="hidden" asp-for="product.ProductID" />
            <input type="hidden" asp-for="product.Name" />
            <div class="form-group">
                <label class="control-label">Product Name:</label>
                @Html.DisplayFor(c => Model.product.Name)
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-registrationId="@Model.order.OrderID">Back to List</a>
</div>
